---
import Slide from "@components/slide/Slide.astro";
import InProgressImage from "@assets/in-progress.svg";
const { class: className, ...rest } = Astro.props;
---

<Slide class="bg-shades-eggnog-50 justify-center md:justify-start">
    <div class="flex flex-col justify-between w-full">
        <div></div>
        <h2 class="text-xl sm:text-2xl md:text-3xl text-center md:text-left">
            Серія матеріалів Culture Differences
        </h2>
    </div>

    <div class="flex items-center justify-center">
        <img
            src={InProgressImage.src}
            alt="In Progress"
            class="w-24 h-24 lg:w-auto lg:h-auto"
        />
    </div>

    <h3
        class="text-xs sm:text-sm md:text-base flex text-heading text-opacity-75 text-secondary-night items-center justify-center"
    >
        Наразі це в розробці :)
    </h3>
</Slide>
