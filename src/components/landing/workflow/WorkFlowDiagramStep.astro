---
export interface Step {
    id: string;
    title: string;
    description: string;
    position?: { x: number; y: number };
}

interface Props {
    step: Step;
    class?: string;
    id?: string;
}

const { step, id, class: additionalClass } = Astro.props;
---

<div id={step.id} class:list={["flex gap-4", additionalClass]} id={id}>
    <slot name="icon-slot" />
    <div class="flex flex-col gap-2">
        <div class="flex gap-2">
            <h3 class="text-displayXSmall">
                {step.title}
            </h3>
            <span>{step.id}</span>
        </div>
        <p class="text-caption max-w-[450px]">
            {step.description}
        </p>
    </div>
</div>
